<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_compra_token"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="btm.app.CompraToken"
    android:orientation="vertical">

    <TextView
        android:text="@string/seleccione_el_metodo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_margin="10dp"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <Spinner
        android:layout_width="match_parent"
        android:id="@+id/spinnerTipoCompra"
        android:layout_margin="10dp"
        android:entries="@array/tipo_compra"
        android:layout_height="45dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/spinnerTipoTC"
        android:layout_margin="10dp"
        android:spinnerMode="dialog" />

    <EditText
        android:background="@drawable/backgound_edit_text"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editTextEmail"
        android:hint="E-mail"
        android:layout_margin="10dp" />

    <EditText
        android:background="@drawable/backgound_edit_text"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextMonto"
        android:layout_margin="10dp"
        android:hint="@string/ingrese_valor" />

    <Button
        android:text="@string/comprar_token"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCompraToken"
        android:layout_margin="10dp"
        android:background="@drawable/background_button"
        android:textColor="@android:color/white"/>
</LinearLayout>
